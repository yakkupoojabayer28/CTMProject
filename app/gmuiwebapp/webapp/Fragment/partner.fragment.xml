<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Partner Selection"
        contentWidth="400px"
        contentHeight="300px"
    >
        <OverflowToolbar>
            <SearchField
                liveChange="onSearchPressLiveChange"
                search="onSearchPressLiveChange"
                width="45%"
                placeholder=""
            >
                <customData>
                    <core:CustomData
                        key="column1"
                        value="vendor"
                    />
                    <core:CustomData
                        key="column2"
                        value="Name"
                    />
                </customData>
            </SearchField>
            <SearchField
                liveChange="onSearchPressLiveChange"
                search="onSearchPressLiveChange"
                width="45%"
                placeholder=""
            >
                <customData>
                    <core:CustomData
                        key="column1"
                        value="vendor"
                    />
                    <core:CustomData
                        key="column2"
                        value="Name"
                    />
                </customData>
            </SearchField>
        </OverflowToolbar>
        <Table
            items="{localModel>/partners}"
            mode="SingleSelectLeft"
        >
            <items>
                <ColumnListItem
                    type="Active"
                >
                    <cells>
                        <Text text="{localModel>vendor}" />
                        <Text text="{localModel>Name}" />
                    </cells>
                </ColumnListItem>
            </items>
            <columns>
                <Column>
                    <header>
                        <Label text="Vendor" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="Name" />
                    </header>
                </Column>
            </columns>
        </Table>
        <buttons>
            <Button
                text="OK"
                press="onOkDialog"
                type="Emphasized"
            />
            <Button
                text="Close"
                press=".onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
