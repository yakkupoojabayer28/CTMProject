<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Power of Attorney Selection"
        contentWidth="400px"
        contentHeight="300px"
    >
        <Table
            items="{localModel>/attorneyPartners}"
            mode="SingleSelectLeft"
        >
            <items>
                <ColumnListItem
                    type="Active"
                >
                    <cells>
                        <Text text="{localModel>vendor}" />
                        <Text text="{localModel>Name}" />
                    </cells>
                </ColumnListItem>
            </items>
            <columns>
                <Column>
                    <header>
                        <Label text="Vendor" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="Name" />
                    </header>
                </Column>
            </columns>
        </Table>
        <buttons>
            <Button
                text="OK"
                press="attorneyOkPress"
                type="Emphasized"
            />
            <Button
                text="Close"
                press=".onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>