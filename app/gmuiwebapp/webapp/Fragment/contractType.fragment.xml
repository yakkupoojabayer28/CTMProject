<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Contract Type Selection"
        contentWidth="500px"
        contentHeight="400px"
    >
        <OverflowToolbar>
            <SearchField
                liveChange="onSearchPressLiveChange"
                search="onSearchPressLiveChange"
                width="45%"
                placeholder=""
            >
                <customData>
                    <core:CustomData
                        key="column1"
                        value="Contract_type"
                    />
                    <core:CustomData
                        key="column2"
                        value="Contract_Type_Text"
                    />
                </customData>
            </SearchField>
            <SearchField
                liveChange="onSearchPressLiveChange"
                search="onSearchPressLiveChange"
                width="45%"
                placeholder=""
            >
                <customData>
                    <core:CustomData
                        key="column1"
                        value="Contract_type"
                    />
                    <core:CustomData
                        key="column2"
                        value="Contract_Type_Text"
                    />
                </customData>
            </SearchField>
        </OverflowToolbar>
        <Table
            items="{ContractModel>/YYMPU_GM_F4_Contracttyp}"
            mode="SingleSelectLeft"
        >
            <items>
                <ColumnListItem type="Active">
                    <cells>
                        <Text text="{ContractModel>Contract_type}" />
                        <Text text="{ContractModel>Contract_Type_Text}" />
                    </cells>
                </ColumnListItem>
            </items>
            <columns>
                <Column>
                    <header>
                        <Label text="Contract Type" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="Contract Description" />
                    </header>
                </Column>
            </columns>
        </Table>
        <buttons>
            <Button
                text="OK"
                press="onOkDialog"
                type="Emphasized"
            />
            <Button
                text="Close"
                press=".onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
