<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        title="Add Partner"
        contentWidth="500px"
        contentHeight="400px"
    >
        <customData>
            <core:CustomData
                key="inputField"
                value="addPartner"
            />
        </customData>
        <VBox class="sapUiSmallMargin">
            <f:Form editable="true">
                <f:layout>
                    <f:ColumnLayout />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Partner">
                                <f:fields>
                                    <Input
                                        showValueHelp="true"
                                        valueHelpRequest="onValueHelpClick"
                                        description=""
                                        required="true"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Role">
                                <f:fields>
                                    <Select
                                        required="true" forceSelection="false"
                                    >
                                        <items>
                                            <core:Item
                                                key="Grower"
                                                text="Grower"
                                            />
                                            <core:Item
                                                key="Land Owner"
                                                text="Land Owner"
                                            />
                                        </items>
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <buttons>
            <Button
                text="OK"
                press="addPartnerOkPress"
                type="Emphasized"
            />
            <Button
                text="Close"
                press=".onCloseDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
